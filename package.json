{
  "name": "react-native-divkit",
  "version": "1.0.0",
  "description": "DivKit renderer for React Native - Server-driven UI framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:peggy && tsc",
    "build:peggy": "peggy src/expressions/expressions.peggy --allowed-start-rules start,JsonStringContents --format es -o src/expressions/expressions.ts && printf '%s\n%s\n' '// @ts-nocheck' \"$(cat src/expressions/expressions.ts)\" > src/expressions/expressions.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "divkit",
    "react-native",
    "server-driven-ui",
    "dynamic-ui",
    "mobile"
  ],
  "author": "Ruslan Pulatov",
  "license": "Apache-2.0",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.72.0"
  },
  "dependencies": {
    "peggy": "^3.0.2"
  },
  "optionalDependencies": {
    "@react-native-clipboard/clipboard": "^1.13.0",
    "react-native-fast-image": "^8.6.3",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-svg": "^15.15.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/react-native": "^12.0.0",
    "@types/jest": "^29.0.0",
    "@types/react": "^19.2.13",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.47.0",
    "jest": "^29.0.0",
    "react": "19.2.4",
    "react-native": "0.83.1",
    "react-test-renderer": "^19.2.0",
    "semantic-release": "^25.0.3",
    "ts-jest": "^29.0.0",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rpulatov/react-native-divkit.git"
  }
}
